@page
@model Narciarze_v_2.Pages.LogowanieModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="m-5">
    <form class="justify-content-center">
        <!-- Email input -->
        <div class="form-outline mb-4">
            <input type="email" id="email_input" class="form-control" />
            <label class="form-label" for="email_input">Adress Email</label>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <input type="password" id="email_input" class="form-control" />
            <label class="form-label" for="email_input">Hasło</label>
        </div>

        <!-- Submit button -->
        <button type="button" id="log_in_button" class="btn btn-primary btn-block mb-4">Zaloguj</button>


    </form>
</div>

<div class="text-center m-3">
        <a class="text-dark" asp-area="" asp-page="/Strefa_Klienta/Klient">Klient</a>
        <a class="text-dark" asp-area="" asp-page="/Strefa_Administracji/Administrator/Administrator">Admin</a>
