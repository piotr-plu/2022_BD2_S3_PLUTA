@page
@model Narciarze_v_2.Pages.Strefa_Administracji.Zarzad.ZmianaCennikaModel
@{
    ViewData["Title"] = "Edycja cennika";
    Layout = "_Layout_Zarzad";
}


<body>
    <div class="container m-5">
        <div class="row m-5">
            <div class="card text-black shadow" style="border-radius: 25px;">
                <h2 class="text-center mt-4">Edycja Cennika</h2>

                <form method="post" class="m-4">
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">

                            <select name="wyciag" class="form-control">
                                @foreach (var a in Model.w)
                                {
                                    <option value="@a.id">@a.nazwa</option>
                                }
                            </select>

                            <label class="form-label" for="klient">Wybierz Wyciąg</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center m-2">
                        <input type="submit" value="Wyszukaj" class="btn btn-primary btn-block mb-4" asp-page-handler="Wyciag" />
                    </div>

                    @foreach (var aa in Model.ww)
                    {
                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                <div class="form-outline flex-fill mb-0">
                                    <input type="text" value="@aa.id" readonly name="id" class="form-control" />
                                    <label class="form-label" for="id">Wyciąg</label>
                                    <input type="text" value="@aa.nazwa" readonly name="z_nazwa" class="form-control" />
                                    <label class="form-label" for="z_nazwa">Wyciąg</label>
                                    <input type="text" value="@aa.cena" name="z_cena" class="form-control" />
                                    <label class="form-label" for="z_cena">Cena za pojedynczy przejazd</label>
                                    <input type="text" value="@aa.rozp" name="z_rozp" class="form-control" />
                                    <label class="form-label" for="z_rozp">Data początku obowiązywania</label>
                                    <input type="text" value="@aa.zak" name="z_zak" class="form-control" />
                                    <label class="form-label" for="z_zak">Data końca obowiązywania</label>
                                </div>
                        </div>

                        <div class="d-flex justify-content-center m-2">
                            <input type="submit" value="Zaktualizuj" class="btn btn-primary btn-block mb-4" asp-page-handler="Akt" />
                        </div>
                        
                    }
                </form>

            </div>
        </div>
    </div>

</body>

