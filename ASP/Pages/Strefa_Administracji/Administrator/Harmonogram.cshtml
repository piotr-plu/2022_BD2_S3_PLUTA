@page
@model Narciarze_v_2.Pages.Strefa_Administracji.Administrator.HarmonogramModel
@{
    ViewData["Title"] = "Edycja Harmonogramu";
    Layout = "_Layout_Admin";
}
<body>
    <div class="fluid-container m-5">
        <div class="row">
            <div class="col-md-12">
                <div class="container">
                    <div class="row d-flex justify-content-center align-items-center">
                        <div class="card text-black" style="border-radius: 25px;">
                            <div class="m-3">
                                <p class="text-center h3 fw-bold ">Dodaj Harmonogram</p>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <select name="nazwaWyciagDodajHarm" class="form-control">
                                            @foreach (var wyciag in Model.wyciagi)
                                            {
                                                <option value="@wyciag.id">@wyciag.nazwa</option>
                                            }
                                        </select>
                                        <label class="form-label" for="nazwaWyciagDodajHarm">Nazwa Wyciągu</label>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center m-2">
                                    <input type="submit" value="Wybierz" class="btn btn-primary btn-block mb-4" asp-page-handler="WybierzWyciagDodajHarm" />
                                </div>

                                <form method="post" class="m-3">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">

                                            <select name="stanWyciagHarmDodaj" class="form-control">
                                                <option value="1">Czynny</option>
                                                <option value="0">Nieczynny</option>
                                            </select>
                                            <label class="form-label" for="stanWyciagHarmDodaj">Stan Wyciągu w danym terminie</label>

                                            <input type="date" name="dataRozpHarmDodaj" class="form-control" value="" />
                                            <label class="form-label" for="dataRozpHarmDodaj">Data rozpoczęcia</label>

                                            <input type="date" name="dataZakHarmDodaj" class="form-control " />
                                            <label class="form-label" for="dataZakHarmDodaj">Data zakończenia</label>

                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center m-2">
                                        <input type="submit" value="Zapisz zmiany" class="btn btn-primary btn-block mb-4" asp-page-handler="EdytujWyciag" />
                                    </div>

                                </form>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="fluid-container m-5">
        <div class="row">
            <div class="col-md-12">
                <div class="container">
                    <div class="row d-flex justify-content-center align-items-center">
                        <div class="card text-black" style="border-radius: 25px;">
                            <div class="m-3">
                                <p class="text-center h3 fw-bold ">Edytuj Harmonogram</p>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <select name="nazwaWyciagHarm" class="form-control">
                                            @foreach (var wyciag in Model.wyciagi)
                                            {
                                                <option value="@wyciag.id">@wyciag.nazwa</option>
                                            }
                                        </select>
                                        <label class="form-label" for="nazwaWyciagHarm">Nazwa Wyciągu</label>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center m-2">
                                    <input type="submit" value="Wybierz" class="btn btn-primary btn-block mb-4" asp-page-handler="WybierzSWyciag" />
                                </div>

                                <form method="post" class="m-3">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">

                                            <input type="text" name="stanWyciaguEdytuj" class="form-control" />
                                            <label class="form-label" for="stanWyciagEdytuj">Harmonogram</label>

                                            <div class="d-flex justify-content-center m-2">
                                                <input type="submit" value="Wybierz" class="btn btn-primary btn-block mb-4" asp-page-handler="WybierzSWyciag" />
                                            </div>

                                            <input type="text" name="stanWyciaguEdytuj" class="form-control" />
                                            <label class="form-label" for="stanWyciagEdytuj">Stan Wyciągu</label>

                                            <input type="text" name="nazwaWyciaguEdytuj" class="form-control" value="" />
                                            <label class="form-label" for="nazwaWyciagEdytuj">Data rozpoczęcia</label>

                                            <input type="text" name="harmonogramWyciąguEdytuj" class="form-control " />
                                            <label class="form-label" for="harmonogramWyciagEdytuj">Data zakończenia</label>

                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center m-2">
                                        <input type="submit" value="Zapisz zmiany" class="btn btn-primary btn-block mb-4" asp-page-handler="EdytujWyciag" />
                                    </div>

                                </form>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
